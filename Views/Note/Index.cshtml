@model List<PhoneBook_ASP.NET_Core_App.Models.Classes.Notes>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />

</head>
<body>
    <table class="simple-little-table" cellspacing='0'>
        <tr style="font-size:20px;">
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th><a href="~/Note/Details/@Model[i].Id">ID: @Model[i].Id></a></th>
                <th>@Model[i].Name</th>
                <th>@Model[i].SurName</th>
                <th>@Model[i].Patronymic</th>
            </tr>
        }
    </table>
</body>
</html>